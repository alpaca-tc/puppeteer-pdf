{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es6",
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules"
  ],
  "compileOnSave": false
}
