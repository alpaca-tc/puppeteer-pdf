{
  "name": "puppeteer-pdf",
  "version": "1.0.0",
  "description": "Convert HTML to PDF",
  "main": "dist/index.js",
  "repository": "https://moneyforward/puppeteer-pdf",
  "author": "alpaca-tc",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node .",
    "tslint": "./node_modules/.bin/tslint --project .",
    "build": "tsc",
    "test": "jest",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand"
  },
  "jest": {
    "rootDir": "src",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js|jsx)"
    ]
  },
  "dependencies": {
    "debug": "^4.1.1",
    "express": "^4.17.3",
    "joi": "^14.3.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "puppeteer": "^1.20.0",
    "tmp-promise": "^2.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.1",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  }
}
